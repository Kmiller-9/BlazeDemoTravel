pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://your-git-repo-url.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'python test_blazedemo.py'
            }
        }
    }
}